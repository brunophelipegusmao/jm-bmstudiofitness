{
  "name": "jm-bmstudiofitness",
  "version": "0.1.0",
  "description": "Sistema completo de gerenciamento para estúdios fitness com check-ins, controle financeiro e administração de alunos",
  "author": "Bruno Mulim <bmulim@gmail.com>",
  "private": true,
  "scripts": {
    "dev": "next dev --turbopack",
    "dev:frontend": "next dev --turbopack",
    "dev:backend": "cd backend && npm run start:dev",
    "dev:all": "concurrently --names \"FRONTEND,BACKEND\" --prefix-colors \"cyan,magenta\" \"npm run dev:frontend\" \"npm run dev:backend\"",
    "build": "next build --turbopack",
    "build:backend": "cd backend && npm run build",
    "build:all": "npm run build:backend && npm run build",
    "start": "next start",
    "start:backend": "cd backend && npm run start:prod",
    "start:all": "concurrently --names \"FRONTEND,BACKEND\" --prefix-colors \"cyan,magenta\" \"npm run start\" \"npm run start:backend\"",
    "lint": "eslint",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --watchAll=false",
    "test:security": "jest tests/security/ --verbose",
    "test:security:coverage": "jest tests/security/ --coverage",
    "test:security:watch": "jest tests/security/ --watch",
    "db:push": "drizzle-kit push",
    "db:seed": "npx tsx src/db/seed.ts",
    "db:studio": "drizzle-kit studio"
  },
