# ========================================
# BACKEND NESTJS - EXEMPLO DE CONFIGURAÇÃO
# ========================================
# Copie este arquivo para .env e preencha com suas credenciais

# Banco de dados PostgreSQL (Neon)
DATABASE_URL='postgresql://user:password@host:5432/database?sslmode=require'

# JWT Authentication
JWT_SECRET="your-super-secret-key-change-this-in-production"
JWT_ACCESS_TOKEN_EXPIRES_IN="7d"
JWT_REFRESH_TOKEN_EXPIRES_IN="30d"

# Server Configuration
PORT=3001
NODE_ENV=development

# CORS Configuration (Frontend URL)
CORS_ORIGIN="http://localhost:3000"

# ======== CONFIGURAÇÃO DE E-MAIL ========
# 1. RESEND (Recomendado)
RESEND_API_KEY="re_your_api_key_here"
EMAIL_FROM="noreply@yourdomain.com"
EMAIL_FROM_NAME="Your Gym Name"

# 2. Modo de desenvolvimento
EMAIL_PROVIDER="development"

# ======== N8N WEBHOOKS (OPCIONAL) ========
# Habilitar integração com n8n para automações
N8N_ENABLED="false"
N8N_WEBHOOK_URL="https://your-n8n-instance.com/webhook/your-webhook-id"
# N8N_WEBHOOK_URL="https://your-n8n.com/webhook"
# N8N_USER_CREATED_WEBHOOK="https://your-n8n.com/webhook/user-created"
# N8N_PAYMENT_RECEIVED_WEBHOOK="https://your-n8n.com/webhook/payment-received"
# N8N_CHECKIN_WEBHOOK="https://your-n8n.com/webhook/checkin"
